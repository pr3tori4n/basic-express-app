{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules"
    ],
    "verbose": true,
    "events": {
      "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
      "src/server"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,pug"
}